{
  "name": "output-management-tool",
  "version": "0.6.0",
  "private": false,
  "type": "commonjs",
  "description": "業務プロセス/BPMN/マニュアル三位一体同期対応・実利用可能なデスクトップ業務管理ツール (Phase 6 完了)",
  "keywords": [
    "業務管理",
    "BPMN",
    "工程表",
    "マニュアル",
    "同期",
    "Trinity",
    "Phase6",
    "Electron",
    "Next.js",
    "React"
  ],
  "author": "Output Management Tool Project Team",
  "license": "MIT",
  "homepage": "https://github.com/your-org/output-management-tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/output-management-tool.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "phase": "6",
  "productionReady": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run clean && npm run build:next && npm run build:electron && electron-builder",
    "build:next": "cross-env NEXT_PUBLIC_KEEP_CONSOLE=1 next build && node fix-html.js",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:win": "npm run clean && npm run generate:icons && npm run build:next && npm run build:electron && electron-builder --win --x64",
    "build:mac": "npm run clean && npm run generate:icons && npm run build:next && npm run build:electron && electron-builder --mac",
    "build:linux": "npm run clean && npm run generate:icons && npm run build:next && npm run build:electron && electron-builder --linux",
    "generate:icons": "node generate-icons.js",
    "clean": "rimraf .next out dist && rimraf electron/main.js electron/preload.js",
    "rebuild:sqlite": "npm rebuild better-sqlite3 --update-binary",
    "postinstall": "electron-builder install-app-deps",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.8.5",
    "better-sqlite3": "^12.4.1",
    "bpmn-js": "^18.7.0",
    "date-fns": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "electron-serve": "^3.0.0",
    "elkjs": "^0.11.0",
    "framer-motion": "^12.23.24",
    "fs-extra": "^11.3.2",
    "next": "15.1.6",
    "papaparse": "^5.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-window": "^2.2.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.6",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "to-ico": "^1.1.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  }
}
